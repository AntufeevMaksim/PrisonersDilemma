{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug my_app",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/src/my_app",  // Путь к исполняемому файлу
            "args": [],  // Аргументы командной строки (если нужны)
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",  // Для Linux/macOS (lldb для macOS)
            "setupCommands": [
                {
                    "description": "Включить pretty-printing для gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "cmake: build"  // Автоматическая сборка перед запуском
        }
    ]
}